.mainchat
  .mainheader
    .leftbox
      .groupname
        = @group.name
      .membername
        - @group.users.each do |n|
          = n.name
    .editbtn
      = link_to edit_group_path(current_user) do
        Edit 
  .mainmessage
    = render partial: 'messages', collection: @messages
    .mainmessage__box
      .textgroup
        .username
        .textimg
    .textdate
      
  .form
    .newmessage
      = form_for [@group, @message] do |f|
        .inputbox
          .input
            = f.text_field :content, placeholder: 'type a message'
          .img
            = f.label :image do
              = icon('fas', 'image')
              = f.file_field :image, class: 'inputbox__image'
          = f.submit 'Send', class: 'submit'
